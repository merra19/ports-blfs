# description	: Policy framework for controlling privileges for system-wide services
# depends	: glib duktape pam gobject-introspection expat elogind

name=polkit
version=126
release=2
source="https://github.com/polkit-org/polkit/archive/$version/$name-$version.tar.gz
        $name.hooks"

build() {
    cd $name-$version

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        -D man=true \
        -D gtk_doc=false \
        -D session_tracking=elogind \
        -D systemdsystemunitdir=/tmp \
        -D tests=true \
        build
	ninja -C build
}

package() {
    cd $name-$version

	DESTDIR="$PKG" ninja -C build install

    rm -rf "$PKG"/tmp rm -rf "$PKG"/usr/lib/{sysusers,tmpfiles}.d

    install -Dm 0755 ../$name.hooks "$PKG"/etc/blfs_hooks/$name.hooks
}