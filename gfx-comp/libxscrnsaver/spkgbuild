# description	: X.Org X11 library
# depends	: libx11 libxext xorg-proto

name=libxscrnsaver
_name=libXScrnSaver
version=1.2.4
release=1
source="https://www.x.org/pub/individual/lib/libXScrnSaver-$version.tar.xz"

build() {
    cd ${_name}-$version

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --docdir=/usr/share/doc/libXScrnSaver-$version
    make
}

package() {
    cd ${_name}-$version

    make DESTDIR="$PKG" install
}