# description	: Low-level pixel manipulation routines
# depends	: glibc

name=pixman
version=0.46.2
release=1
options="!lto"
source="https://www.cairographics.org/releases/$name-$version.tar.gz"

build() {
    cd $name-$version

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
}

package() {
    cd $name-$version

    DESTDIR="$PKG" ninja -C build install
}