# description	: Wayland protocol files
# depends	: wayland

name=wayland-protocols
version=1.45
release=1
source="https://gitlab.freedesktop.org/wayland/wayland-protocols/-/releases/$version/downloads/$name-$version.tar.xz"

build() {
    cd $name-$version

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
}

package() {
    cd $name-$version

    DESTDIR="$PKG" ninja -C build install
}