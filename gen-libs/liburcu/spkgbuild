# description	: Userspace RCU (read-copy-update) library
# depends	: glibc

name=liburcu
version=0.15.3
release=1
source="https://lttng.org/files/urcu/userspace-rcu-$version.tar.bz2"

build() {
	cd userspace-rcu-$version

	./configure \
        --prefix=/usr \
        --disable-static \
        --docdir=/usr/share/doc/liburcu-$version
	make
}

package() {
    cd userspace-rcu-$version

    make DESTDIR="$PKG" install
}