# description	: Apache Portable Runtime Library
# depends	: util-linux

name=apr
version=1.7.6
release=1
source="https://archive.apache.org/dist/apr/$name-$version.tar.bz2"

build() {
	cd $name-$version

    ./configure \
        --prefix=/usr \
        --disable-static \
        --with-installbuilddir=/usr/share/apr-1/build
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}