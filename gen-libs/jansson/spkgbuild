# description	: C library for encoding, decoding and manipulating JSON data
# depends	: glibc

name=jansson
version=2.14.1
release=1
source="https://github.com/akheron/jansson/releases/download/v$version/$name-$version.tar.bz2"

build() {
	cd $name-$version

    ./configure \
        --prefix=/usr \
        --disable-static
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}
