# description	: Standard GNU compressor
# depends	: glibc less

name=gzip
version=1.14
release=1
source="https://ftp.gnu.org/gnu/gzip/$name-$version.tar.xz"

build() {
    cd $name-$version

    ./configure \
        --prefix=/usr
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}
