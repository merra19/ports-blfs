# description	: tool for automating interactive applications
# depends	: tcl

name=expect
version=5.45.4
release=1
source="https://prdownloads.sourceforge.net/expect/$name$version.tar.gz
        https://www.linuxfromscratch.org/patches/lfs/development/expect-5.45.4-gcc15-1.patch"

build() {
    cd $name$version

    patch -Np1 -i ../expect-5.45.4-gcc15-1.patch
   
    ./configure \
        --prefix=/usr \
        --with-tcl=/usr/lib \
        --enable-shared \
        --disable-rpath \
        --mandir=/usr/share/man \
        --with-tclinclude=/usr/include
    make
}

package() {
    cd $name$version

    make DESTDIR="$PKG" install
    ln -svf $name$version/lib$name$version.so "$PKG"/usr/lib
}
