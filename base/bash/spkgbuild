# description	: The standard GNU Bourne again shell
# depends	: ncurses readline bison

name=bash
version=5.3
release=1
options="!lto"
source="https://ftp.gnu.org/gnu/bash/$name-$version-rc2.tar.gz"

build() {
    cd $name-$version-rc2

    ./configure \
        --prefix=/usr \
        --with-installed-readline \
        --without-bash-malloc \
        --docdir=/usr/share/doc/$name-$version
    make
}

package() {
    cd $name-$version-rc2

    make DESTDIR="$PKG" install

    ln -sv bash "$PKG"/usr/bin/sh
}
