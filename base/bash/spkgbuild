# description	: The standard GNU Bourne again shell
# depends	: ncurses readline bison

name=bash
version=5.3.rc2
_version=${version/.rc/-rc}
release=1
options="!lto"
source="https://ftp.gnu.org/gnu/bash/$name-$_version.tar.gz"

build() {
    cd $name-$_version

    ./configure \
        --prefix=/usr \
        --with-installed-readline \
        --without-bash-malloc \
        --docdir=/usr/share/doc/$name-$version
    make
}

package() {
    cd $name-$_version

    make DESTDIR="$PKG" install

    ln -sv bash "$PKG"/usr/bin/sh
}
