# description	: A tool to display dialog boxes from shell scripts
# depends	: ncurses

name=dialog
version=1.3_20240619
vrsn=$(echo $version | sed 's/_/-/')
release=1
options="!lto"
source="https://invisible-mirror.net/archives/$name/$name-$vrsn.tgz"

build() {
	cd $name-$vrsn
	
	./configure \
		--prefix=/usr \
		--with-ncursesw \
		--with-libtool
	make
}

package() {
    cd $name-$vrsn

	make DESTDIR="$PKG" install
}