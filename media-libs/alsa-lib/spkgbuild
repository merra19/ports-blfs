# description	: Advanced Linux Sound Architecture Library
# depends	: glibc alsa-ucm-conf alsa-topology-conf

name=alsa-lib
version=1.2.14
release=1
options="!lto"
source="https://www.alsa-project.org/files/pub/lib/$name-$version.tar.bz2"

build() {
	cd $name-$version

    ./configure \
        --prefix=/usr
	make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}