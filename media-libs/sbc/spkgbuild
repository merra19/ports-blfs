# description	: Audio codec to connect bluetooth HQ audio devices as headphones or loudspeakers
# depends	: glibc

name=sbc
version=2.1
release=1
source="https://www.kernel.org/pub/linux/bluetooth/$name-$version.tar.xz"

build() {
	cd $name-$version

    ./configure \
        --prefix=/usr \
        --disable-static \
        --disable-tester
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}