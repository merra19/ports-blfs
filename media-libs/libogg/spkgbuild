# description	: The Ogg media file format library
# depends	: glibc

name=libogg
version=1.3.6
release=1
options="!lto"
source="http://downloads.xiph.org/releases/ogg/$name-$version.tar.xz"

build() {
	cd $name-$version

	../configure \
        --prefix=/usr \
		--disable-static \
		--docdir=/usr/share/doc/$name-$version
	make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}