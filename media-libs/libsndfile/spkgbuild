# description	: C library for reading and writing files containing sampled sound
# depends	: flac opus libvorbis alsa-lib sqlite libogg lame mpg123 

name=libsndfile
version=1.2.2
release=1
source="https://github.com/libsndfile/libsndfile/releases/download/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

    # Fix building with GCC-15
    sed '/typedef enum/,/bool ;/d' -i \
        src/ALAC/alac_{en,de}coder.c

	./configure \
        --prefix=/usr \
		--docdir=/usr/share/doc/$name-$version
	make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}