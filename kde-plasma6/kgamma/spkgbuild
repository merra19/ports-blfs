# description	: Screen gamma values kcontrol module
# depends	: kcmutils kconfig kconfigwidgets kcoreaddons ki18n 
# depends	: qt6-base libx11 libxxf86vm xorg-proto kdoctools

name=kgamma
version=6.3.2
release=1
source="https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz"

build() {
    cd $name-$version

    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_INSTALL_LIBEXECDIR=libexec \
        -D CMAKE_BUILD_TYPE=Release \
        -D BUILD_TESTING=OFF \
        -Wno-dev
    make -C build
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" -C build install
}
