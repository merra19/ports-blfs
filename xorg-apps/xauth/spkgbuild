# description	: X authority file utility
# depends	: libx11 libxau libxext libxmu xorg-proto

name=xauth
version=1.1.4
release=1
source="https://www.x.org/pub/individual/app/$name-$version.tar.xz"


build() {
	cd $name-$version

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --enable-ipv6
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}