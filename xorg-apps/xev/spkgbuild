# description	: Print contents of X events
# depends	: libx11 libxrandr util-macros xorg-proto

name=xev
version=1.2.6
release=1
source="https://www.x.org/pub/individual/app/$name-$version.tar.xz"


build() {
	cd $name-$version

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static
    make
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" install
}