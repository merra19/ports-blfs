# description	: GTK+-based editor for the Xfce Desktop Environment
# depends	: glib gtk3 gtksourceview4 polkit gspell libxfce4ui

name=mousepad
version=0.6.5
release=1
source="https://archive.xfce.org/src/apps/mousepad/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
	ninja -C build
}

package() {
    cd $name-$version

    DESTDIR="$PKG" ninja -C build install
}