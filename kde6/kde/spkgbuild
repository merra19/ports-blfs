name=kde
version=6.0.0
release=1
source="kde kde-np kscreensaver"

package() {
    install -Dm 644 kde "$PKG"/etc/pam.d/kde
    install -Dm 644 kde-np "$PKG"/etc/pam.d/kde-np
    install -Dm 644 kscreensaver "$PKG"/etc/pam.d/kscreensaver
}