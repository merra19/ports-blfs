# description	: A plain text human readable/writable document format
# depends	: python3 python3-gpep517 python3-setuptools python3-wheel

name=python3-asciidoc
version=10.2.1
release=1
options="!lto"
source="https://files.pythonhosted.org/packages/source/a/asciidoc/asciidoc-${version}.tar.gz"

build() {
	cd asciidoc-${version}

    # Fix an issue causing thousands of lines of “invalid escape sequence” warnings outputted when 
    # generating the documentation of some packages with Asciidoc and Python 3.12+
    sed '/self.separator =/s/"/r"/' -i asciidoc/asciidoc.py

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2

}

package() {
	cd asciidoc-${version}
    
	python3 -m installer -d "$PKG" .dist/*.whl
	install -Dm644 asciidoc/api.py -t "$PKG"/usr/lib/python3*/site-packages/asciidoc/
}