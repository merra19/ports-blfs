# description	: Modern, extensible Python build backend
# depends	: python3 python3-wheel python3-gpep517 python3-setuptools 
# depends	: python3-editables python3-packaging python3-pathspec 
# depends	: python3-pluggy python3-trove-classifiers

name=python3-hatchling
version=1.27.0
release=1
source="https://files.pythonhosted.org/packages/source/h/hatchling/hatchling-$version.tar.gz"

build() {
    cd ${name#*-}-$version

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

package() {
	cd ${name#*-}-$version

	python3 -m installer -d "$PKG" .dist/hatchling-$version-py3-none-any.whl
}