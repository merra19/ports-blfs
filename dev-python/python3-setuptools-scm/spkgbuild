# description	: Manage versions by scm tags via setuptools
# depends	: python3 python3-gpep517 python3-setuptools python3-wheel 
# depends	: python3-packaging python3-typing_extensions

name=python3-setuptools-scm
_name=setuptools_scm
version=8.1.0
release=1
source="https://files.pythonhosted.org/packages/source/s/setuptools_scm/setuptools_scm-$version.tar.gz"

build() {
	cd ${_name}-$version

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

package() {
    cd ${_name}-$version

    python3 -m installer -d "$PKG" .dist/*.whl
}