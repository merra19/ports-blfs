# description	: Internationalized Domain Names in Applications (IDNA)
# depends	: python3 python3-gpep517 python3-setuptools python3-wheel 
# depends	: python3-flit-core

name=python3-idna
version=3.10
release=1
options="!lto"
source="https://files.pythonhosted.org/packages/source/i/idna/idna-$version.tar.gz"

build() {
    cd ${name#*-}-$version

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

package() {
	cd ${name#*-}-$version

	python3 -m installer -d "$PKG" .dist/idna-$version-py3-none-any.whl
}