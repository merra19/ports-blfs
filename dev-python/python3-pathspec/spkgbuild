# description	: Utility library for gitignore style pattern matching of file paths
# depends	: python3 python3-gpep517 python3-setuptools python3-wheel 
# depends	: python3-flit-core

name=python3-pathspec
version=0.12.1
release=1
source="https://files.pythonhosted.org/packages/source/p/pathspec/pathspec-$version.tar.gz"

build() {
    cd ${name#*-}-$version

    gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

package() {
	cd ${name#*-}-$version

	python3 -m installer -d "$PKG" .dist/pathspec-$version-py3-none-any.whl 
}