# description	: Meson PEP 517 Python build backend
# depends	: python3 python3-pyproject-metadata patchelf 
# depends	: python3-wheel

name=python3-meson
_name=meson_python
version=0.17.1
release=1
source="https://files.pythonhosted.org/packages/source/m/meson_python/meson_python-$version.tar.gz"

bsdtar() { tar $@;}

build() {
	cd ${_name}-$version

    meson setup \
        --prefix=/usr \
        --buildtype=plain \
        build
    ninja -C build
}

package() {
	cd ${_name}-$version

	DESTDIR="$PKG" ninja -C build install
    python3 -m compileall "$PKG"/usr/lib
}