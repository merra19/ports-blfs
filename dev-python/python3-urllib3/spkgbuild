# description	: HTTP library with thread-safe connection pooling, file post, and more
# depends	: python3 python3-gpep517 python3-setuptools python3-wheel 
# depends	: python3-hatchling python3-build python3-pyproject_hooks
# depends	: python3-hatch-vcs

name=python3-urllib3
version=2.3.0
release=1
source="https://files.pythonhosted.org/packages/source/u/urllib3/urllib3-$version.tar.gz"

build() {
	cd ${name#*-}-$version

    #gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
    python3 -m build --wheel --no-isolation
}

package() {
	cd ${name#*-}-$version

	#python3 -m installer -d "$PKG" .dist/*.whl
    python -m installer --destdir="$PKG" dist/*.whl
}