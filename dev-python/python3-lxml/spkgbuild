# description	: A Pythonic binding for the libxml2 and libxslt libraries
# depends	: libxslt libxml2 python3-wheel python3-gpep517 
# depends	: python3-setuptools python3-cython

name=python3-lxml
version=5.3.0
release=1
options="!lto"
source="https://files.pythonhosted.org/packages/source/l/lxml/lxml-$version.tar.gz"

build() {
	cd ${name#*-}-$version

	gpep517 build-wheel \
		--wheel-dir .dist \
		--config-json '{"--build-option": ["--with-cython"]}' \
		--output-fd 3 3>&1 >&2
}

package() {
	cd ${name#*-}-$version

	python3 -m installer -d "$PKG" .dist/*.whl
}