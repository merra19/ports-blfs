# description	: An ultra-fast, ultra-compact key-value embedded data store
# depends	: glibc

name=lmdb
version=0.9.33
release=1
source="https://github.com/openldap/openldap/archive/refs/tags/LMDB_$version.tar.gz"

build() {
	cd openldap-LMDB_$version/libraries/liblmdb

	make CFLAGS="$CFLAGS" CPPFLAGS="$CPPFLAGS" LDFLAGS="$LDFLAGS"
	sed -i 's| liblmdb.a||' Makefile
	
}

package() {
    cd openldap-LMDB_$version/libraries/liblmdb

    make prefix="$PKG"/usr install
}