# description	: Framework for downloading and sharing additional application data
# depends	: qt6-base qt6-tools qt6-declarative qt6-5compat ki18n
# depends	: extra-cmake-modules attica karchive kconfig 
# depends	: kcoreaddons  kpackage kwidgetsaddons syndication 
# depends	: kcmutils kirigami

name=knewstuff
version=6.13.0
release=1
source="https://download.kde.org/stable/frameworks/${version%.*}/$name-$version.tar.xz"

build() {
    cd $name-$version

    cmake -B build \
        -D CMAKE_INSTALL_PREFIX=/usr \
        -D CMAKE_INSTALL_LIBEXECDIR=libexec \
        -D CMAKE_PREFIX_PATH=/usr \
        -D CMAKE_SKIP_INSTALL_RPATH=ON  \
        -D CMAKE_BUILD_TYPE=Release \
        -D BUILD_TESTING=OFF \
        -Wno-dev
    make -C build
}

package() {
    cd $name-$version

    make DESTDIR="$PKG" -C build install
}