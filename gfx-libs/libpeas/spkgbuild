# description	: A GObject plugins library
# depends	: glib gobject-introspection lua python3-gobject3

name=libpeas
version=1.36.0
release=1
source="https://download.gnome.org/sources/libpeas/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version

	meson setup \
        --prefix=/usr \
        --buildtype=plain \
        --wrap-mode=nofallback \
        build
	ninja -C build
}

package() {
    cd $name-$version

    DESTDIR="$PKG" ninja -C build install
}